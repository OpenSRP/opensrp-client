<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/child_name"
            style="@style/CustomFontTextViewStyle.ClientList.NoPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:layout_marginBottom="15dp"
            android:textColor="@color/client_list_grey"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/child_mother"
            style="@style/CustomFontTextViewStyle.ClientList.NoPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother Name : "
            android:textColor="@color/client_list_grey"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/child_dob"
            style="@style/CustomFontTextViewStyle.ClientList.NoPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth : "
            android:textColor="@color/client_list_grey"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</LinearLayout>